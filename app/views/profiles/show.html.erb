<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3 well">

      <h1>User: <%= @user.email %></h1>

      <% if current_user != @user %>
        <% if @following %>
          <%= link_to 'Unfollow user', following_path(@user), method: :delete %>
        <% else %>
          <%= link_to 'Follow user', followings_path(@user), method: :post %>
        <% end %>
      <% end %>

      <h2>Tweets:</h2>

      <% @tweets.each do |tweet| %>
        <div class="well">
          <strong><%= tweet.text %><br/></strong>
          tweeted on <%= tweet.created_at %>
        </div>

      <% end %>

    </div>
  </div>
</div>
