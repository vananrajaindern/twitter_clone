<% if current_user != @user %>
  <% if @following %>
    <%= button_to 'Unfollow user', following_path(@user.username, @user.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= button_to 'Follow user', followings_path(@user.username), method: :post, class: 'btn btn-default' %>
  <% end %>
<% end %>
