<div class="container">
  <div class="row">

    <div class="col-md-2 well">

      <% if @user.avatar.url.present? %>
      <%= image_tag @user.avatar.url, size: "100x100", class: "img-circle" %>
      <% else %>
      <%= image_tag "default.jpg", size: "100x100", class: "img-circle" %>
      <% end %>

      <h3>User stats</h3>
      <strong><%= @user_followers.count %> followers</strong> <br/>
      <% @user_followers.each do |follower| %>
        <%= link_to follower.follower.username, profile_path(follower.follower) %> <br/>
      <% end %>
      <br/>
      <strong>Following <%= @user_followees.count %> users</strong>
      <% @user_followees.each do |followee| %>
        <%= link_to followee.followee.username, profile_path(followee.followee) %> <br/>
      <% end %>

    </div>

    <div class="col-xs-12 col-md-6 col-md-offset-1 well">

      <h1>User: <%= @user.username %></h1>

      <div id="follow-button-container">
        <%= render partial: 'follow_button' %>
      </div>

      <h2>Tweets:</h2>

      <% @tweets.each do |tweet| %>
        <div class="well">
          <strong><%= tweet.text %><br/></strong>
          tweeted on <%= tweet.created_at %>
        </div>

      <% end %>

    </div>
  </div>
</div>
